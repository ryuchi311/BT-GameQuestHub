import React, { useState } from 'react';
import { useAuth } from '../../context/AuthContext';
import { User, Settings, Trophy, Activity } from 'lucide-react';

interface ActivityLog {
  id: string;
  type: 'SUCCESS' | 'FAILED' | 'CLAIM';
  description: string;
  date: string;
  points?: number;
}

const Profile: React.FC = () => {
  const { user, updateUser, logout, isLoading } = useAuth();
  const [activeTab, setActiveTab] = useState<'profile' | 'activity'>('profile');
  const [isEditing, setIsEditing] = useState(false);
  
  console.log('ðŸ‘¤ Profile page loaded, user:', user, 'isLoading:', isLoading);
  
  const [editForm, setEditForm] = useState({
    name: user?.name || '',
    email: user?.email || '',
    telegramUsername: user?.telegramUsername || '',
    twitterUsername: user?.twitterUsername || '',
    discordUsername: user?.discordUsername || '',
  });
  
  // Show loading state while user is being loaded
  if (isLoading || !user) {
    return (
      <div className="flex justify-center items-center py-8">
        <div className="text-center">
          <div className="w-8 h-8 border-2 border-yellow-400 border-t-transparent rounded-full animate-spin mx-auto mb-4"></div>
          <p className="text-gray-400">Loading profile...</p>
        </div>
      </div>
    );
  }

  // Mock activity data
  const activities: ActivityLog[] = [
    {
      id: '1',
      type: 'SUCCESS',
      description: 'Completed "Subscribe to our YouTube Channel"',
      date: '2024-01-15',
      points: 100,
    },
    {
      id: '2',
      type: 'SUCCESS',
      description: 'Completed "Follow us on Twitter"',
      date: '2024-01-14',
      points: 50,
    },
    {
      id: '3',
      type: 'CLAIM',
      description: 'Claimed "Discord Nitro 1 Month"',
      date: '2024-01-13',
      points: -1500,
    },
    {
      id: '4',
      type: 'FAILED',
      description: 'Submission for "Retweet our Pinned Post" rejected',
      date: '2024-01-12',
    },
  ];

  const handleSaveProfile = () => {
    if (user && editForm.name.trim() && editForm.email.trim()) {
      updateUser({
        name: editForm.name.trim(),
        email: editForm.email.trim(),
        telegramUsername: editForm.telegramUsername.trim() || undefined,
        twitterUsername: editForm.twitterUsername.trim() || undefined,
        discordUsername: editForm.discordUsername.trim() || undefined,
      });
      setIsEditing(false);
    }
  };

  const getActivityIcon = (type: string) => {
    switch (type) {
      case 'SUCCESS': return 'âœ…';
      case 'FAILED': return 'âŒ';
      case 'CLAIM': return 'ðŸŽ';
      default: return 'ðŸ“';
    }
  };

  const getActivityColor = (type: string) => {
    switch (type) {
      case 'SUCCESS': return 'text-green-400';
      case 'FAILED': return 'text-red-400';
      case 'CLAIM': return 'text-blue-400';
      default: return 'text-gray-400';
    }
  };

  if (!user) return null;

  return (
    <div className="mt-4">
      {/* Profile Header */}
      <div className="bg-gradient-to-r from-gray-800 to-gray-900 rounded-lg p-6 mb-6">
        <div className="flex items-center gap-4 mb-4">
          <div className="w-20 h-20 bg-gradient-to-r from-yellow-400 to-orange-500 rounded-full flex items-center justify-center">
            <span className="text-2xl font-bold text-gray-900">{user.name.charAt(0)}</span>
          </div>
          <div>
            <h2 className="text-2xl font-bold text-white">{user.name}</h2>
            <p className="text-gray-400">{user.email}</p>
            <div className="flex items-center gap-4 mt-2 text-sm">
              <span className="text-yellow-400">Level {user.level}</span>
              <span className="text-gray-400">â€¢</span>
              <span className="text-green-400">{user.questsCompleted} quests completed</span>
            </div>
          </div>
        </div>

        {/* Stats Grid */}
        <div className="grid grid-cols-3 gap-4 text-center">
          <div className="bg-gray-800/50 rounded-lg p-3">
            <div className="text-yellow-400 font-bold text-lg">{user.points.toLocaleString()}</div>
            <div className="text-gray-400 text-xs">Points</div>
          </div>
          <div className="bg-gray-800/50 rounded-lg p-3">
            <div className="text-blue-400 font-bold text-lg">{user.level}</div>
            <div className="text-gray-400 text-xs">Level</div>
          </div>
          <div className="bg-gray-800/50 rounded-lg p-3">
            <div className="text-green-400 font-bold text-lg">{Math.round((user.xp / user.maxXp) * 100)}%</div>
            <div className="text-gray-400 text-xs">Progress</div>
          </div>
        </div>
      </div>

      {/* Tab Navigation */}
      <div className="flex bg-gray-800 rounded-lg p-1 mb-6">
        <button
          onClick={() => setActiveTab('profile')}
          className={`flex-1 flex items-center justify-center gap-2 py-2 px-4 rounded-md transition-colors ${
            activeTab === 'profile'
              ? 'bg-yellow-400 text-gray-900'
              : 'text-gray-400 hover:text-white'
          }`}
        >
          <User className="w-4 h-4" />
          Profile
        </button>
        <button
          onClick={() => setActiveTab('activity')}
          className={`flex-1 flex items-center justify-center gap-2 py-2 px-4 rounded-md transition-colors ${
            activeTab === 'activity'
              ? 'bg-yellow-400 text-gray-900'
              : 'text-gray-400 hover:text-white'
          }`}
        >
          <Activity className="w-4 h-4" />
          Activity
        </button>
      </div>

      {/* Tab Content */}
      {activeTab === 'profile' ? (
        <div className="space-y-6">
          {/* Profile Form */}
          <div className="bg-gray-800 rounded-lg p-6">
            <div className="flex justify-between items-center mb-4">
              <h3 className="text-lg font-semibold text-white">Profile Information</h3>
              <button
                onClick={() => {
                  if (isEditing) {
                    setEditForm({ 
                      name: user.name, 
                      email: user.email,
                      telegramUsername: user?.telegramUsername || '',
                      twitterUsername: user?.twitterUsername || '',
                      discordUsername: user?.discordUsername || '',
                    });
                  }
                  setIsEditing(!isEditing);
                }}
                className="text-yellow-400 hover:text-yellow-300 transition-colors"
              >
                {isEditing ? 'Cancel' : 'Edit'}
              </button>
            </div>

            <div className="space-y-4">
              <div>
                <label className="block text-gray-400 text-sm mb-2">Name</label>
                {isEditing ? (
                  <input
                    type="text"
                    value={editForm.name}
                    onChange={(e) => setEditForm(prev => ({ ...prev, name: e.target.value }))}
                    className="w-full bg-gray-700 border border-gray-600 rounded-lg px-3 py-2 text-white"
                  />
                ) : (
                  <p className="text-white">{user.name}</p>
                )}
              </div>

              <div>
                <label className="block text-gray-400 text-sm mb-2">Email</label>
                {isEditing ? (
                  <input
                    type="email"
                    value={editForm.email}
                    onChange={(e) => setEditForm(prev => ({ ...prev, email: e.target.value }))}
                    className="w-full bg-gray-700 border border-gray-600 rounded-lg px-3 py-2 text-white"
                  />
                ) : (
                  <p className="text-white">{user.email}</p>
                )}
              </div>

              <div>
                <label className="block text-gray-400 text-sm mb-2">Telegram Username</label>
                {isEditing ? (
                  <input
                    type="text"
                    placeholder="@username"
                    value={editForm.telegramUsername}
                    onChange={(e) => setEditForm(prev => ({ ...prev, telegramUsername: e.target.value }))}
                    className="w-full bg-gray-700 border border-gray-600 rounded-lg px-3 py-2 text-white"
                  />
                ) : (
                  <p className="text-white">{user.telegramUsername || 'Not set'}</p>
                )}
              </div>

              <div>
                <label className="block text-gray-400 text-sm mb-2">Twitter Username</label>
                {isEditing ? (
                  <input
                    type="text"
                    placeholder="@username"
                    value={editForm.twitterUsername}
                    onChange={(e) => setEditForm(prev => ({ ...prev, twitterUsername: e.target.value }))}
                    className="w-full bg-gray-700 border border-gray-600 rounded-lg px-3 py-2 text-white"
                  />
                ) : (
                  <p className="text-white">{user.twitterUsername || 'Not set'}</p>
                )}
              </div>

              <div>
                <label className="block text-gray-400 text-sm mb-2">Discord Username</label>
                {isEditing ? (
                  <input
                    type="text"
                    placeholder="username#1234"
                    value={editForm.discordUsername}
                    onChange={(e) => setEditForm(prev => ({ ...prev, discordUsername: e.target.value }))}
                    className="w-full bg-gray-700 border border-gray-600 rounded-lg px-3 py-2 text-white"
                  />
                ) : (
                  <p className="text-white">{user.discordUsername || 'Not set'}</p>
                )}
              </div>

              <div>
                <label className="block text-gray-400 text-sm mb-2">Role</label>
                <p className="text-white capitalize">{user.role}</p>
              </div>

              {isEditing && (
                <button
                  onClick={handleSaveProfile}
                  className="w-full bg-yellow-400 hover:bg-yellow-500 text-gray-900 font-semibold py-2 px-4 rounded-lg transition-colors"
                >
                  Save Changes
                </button>
              )}
            </div>
          </div>

          {/* Actions */}
          <div className="bg-gray-800 rounded-lg p-6">
            <h3 className="text-lg font-semibold text-white mb-4">Account Actions</h3>
            <button
              onClick={logout}
              className="w-full bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded-lg transition-colors"
            >
              Logout
            </button>
          </div>
        </div>
      ) : (
        <div className="bg-gray-800 rounded-lg p-6">
          <h3 className="text-lg font-semibold text-white mb-4">Recent Activity</h3>
          <div className="space-y-4">
            {activities.map(activity => (
              <div key={activity.id} className="flex items-center gap-3 p-3 bg-gray-700/50 rounded-lg">
                <div className="text-xl">{getActivityIcon(activity.type)}</div>
                <div className="flex-1">
                  <p className="text-white text-sm">{activity.description}</p>
                  <p className="text-gray-400 text-xs">{activity.date}</p>
                </div>
                {activity.points && (
                  <div className={`text-sm font-semibold ${
                    activity.points > 0 ? 'text-green-400' : 'text-red-400'
                  }`}>
                    {activity.points > 0 ? '+' : ''}{activity.points}
                  </div>
                )}
              </div>
            ))}
          </div>
        </div>
      )}
    </div>
  );
};

export default Profile;